<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="309.0" prefWidth="1301.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ecommerce.controller.ProdutosController">

    <children>

        <ImageView fitHeight="333.0" fitWidth="559.0" layoutX="-8.0" layoutY="-5.0">
            <image>
                <Image url="@../images/3.jpg" />
            </image>
        </ImageView>

        <Label layoutX="812.0" layoutY="14.0" text="Cadastro de Produtos">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <!-- Nome -->
        <Label layoutX="584.0" layoutY="63.0" text="Nome:"/>
        <TextField fx:id="textNome"
                   layoutX="673.0"
                   layoutY="63.0"/>

        <!-- Código (opcional, se não usar pode remover) -->
        <Label layoutX="584.0" layoutY="103.0" text="Código:"/>
        <TextField layoutX="673.0"
                   layoutY="103.0"
                   disable="true"/>

        <!-- Preço -->
        <Label layoutX="584.0" layoutY="142.0" text="Preço:"/>
        <TextField fx:id="textPreco"
                   layoutX="673.0"
                   layoutY="142.0"/>

        <!-- Quantidade -->
        <Label layoutX="584.0" layoutY="180.0" text="Quantidade:"/>
        <TextField fx:id="textQuantidade"
                   layoutX="673.0"
                   layoutY="180.0"/>

        <!-- Botões -->
        <Button layoutX="601.0" layoutY="247.0"
                text="Voltar"
                onAction="#voltarProduto"/>

        <Button layoutX="694.0" layoutY="247.0"
                text="Limpar"
                onAction="#limparCampos"/>

        <Button layoutX="812.0" layoutY="247.0"
                text="Salvar"
                onAction="#salvarProduto"/>

        <!-- Tabela -->
        <TableView fx:id="tabelaProdutos"
                   layoutX="934.0"
                   layoutY="80.0"
                   prefHeight="200.0"
                   prefWidth="302.0">

            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="75.0"/>
                <TableColumn fx:id="colId" text="ID" prefWidth="75.0"/>
                <TableColumn fx:id="colPreco" text="Preço" prefWidth="75.0"/>
                <TableColumn fx:id="colQuantidade" text="Quantidade" prefWidth="75.0"/>
            </columns>

        </TableView>

    </children>
</Pane>